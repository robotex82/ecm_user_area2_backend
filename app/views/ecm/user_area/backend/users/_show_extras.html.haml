- if @resource.respond_to?(:roles)
  .panel.panel-default
    .panel-heading
      .panel-title= Ecm::UserArea::Role.model_name.human(count: :other)
    %table.table.table-striped.table-condensed.table-hover
      = render_collection(@resource.roles, Ecm::UserArea::Role, as: :bootstrap_table) do |table, record|
        = table.column :identifier
    .panel-footer

- if @resource.respond_to?(:permissions)
  .panel.panel-default
    .panel-heading
      .panel-title= Ecm::UserArea::Permission.model_name.human(count: :other)
    %table.table.table-striped.table-condensed.table-hover
      = render_collection(@resource.permissions, Ecm::UserArea::Permission, as: :bootstrap_table) do |table, record|
        = table.column :identifier
    .panel-footer